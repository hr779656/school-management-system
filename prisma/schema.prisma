generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  password  String
  role      Role     @default(user)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum Role {
  user
  admin
}
