generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:j4asbc56@localhost:5432/SMSDb?schema=public"
}

model Users {
  id              Int       @id @default(autoincrement())
  name            String
  password        String
  email           String    @unique
  age             Int
  city            String
  status          Boolean?  @default(false)
  role            Role      @default(USER)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now())
  enrolledCourses Courses[] @relation("Enrollment")
}

enum Role {
  USER
  ADMIN
}

model Courses {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  price            Int      @default(10)
  image            String   @default("will added later")
  totalVideos      Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())
  enrolledStudents Users[]  @relation("Enrollment")
  videos           Videos[] @relation("VideoCourseRelation")
}

model Videos {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  course      Courses[] @relation("VideoCourseRelation")
}

